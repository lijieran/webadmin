<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.liyang.webadmin.persistence.mapper.UserMapper">
	
	
	<!-- 根据登录名查询用户 -->
	<select id="findByUsername" resultType="user" >
		SELECT
			*
		FROM T_USER a
		
		WHERE a.username = #{0}
	</select>
	
	<!-- 根据登录名查询用户 -->
	<select id="findById" resultType="user" >
		SELECT
			*
		FROM T_USER a
		
		WHERE a.id = #{0}
	</select>
	
	
	
	<!-- 查询所有用户 -->
	<select id="findUsers" resultType="user" >
		SELECT
			*
		FROM T_USER a
	</select>
	
	
	<!-- 查询所有用户角色 -->
	<select id="findRoles" resultType="string" >
		SELECT
			role_id
		FROM T_USER_ROLE a where user_id=#{0}
	</select>
	
	<!-- 保存用户 -->
	<insert id="save">
	    insert into T_USER (id, name, username, password) values(#{id}, #{name}, #{username}, #{password} )
	</insert>
	
	<!-- 保存用户角色 -->
	<insert id="saveUserRole">
	    insert into T_USER_ROLE (user_id, role_id) values(#{0}, #{1})
	</insert>
	
	<delete id="clearUserRole">
	    delete from T_USER_ROLE where user_id=#{0}
	</delete>
	
	<delete id="delete">
	    delete from T_USER where id=#{0}
	</delete>
	
	<update id="update">
	    update T_USER set name=#{name} where id=#{id}
	</update>

	
</mapper>