<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.liyang.webadmin.persistence.mapper.RoleMapper">
	
	
	<select id="findAll" resultType="role" >
		SELECT
			*
		FROM t_role a
	</select>
	
	<insert id="save">
	    insert into t_role 
	    (id,name)
	    values
	    (#{id}, #{name})
	</insert>
	
	<delete id="delete">
	     delete from t_role
	     where 
	     id=#{0}
	</delete>
	
	<update id="update">
	    update t_role set 
		    name = #{name} 
	    where id = #{id}
	</update>
	
	<select id="findById" resultType="role" >
		SELECT
			*
		FROM t_role a where id=#{0}
	</select>
	
	
	<delete id="clearRoleMenu">
	   delete from t_role_menu where role_id=#{0}
	</delete>
	
	
	<insert id="saveRoleMenu">
	   insert t_role_menu 
	   (role_id, menu_id)
	   values
	   (#{0}, #{1})
	</insert>
	
	<select id="findMenusByRole" resultType="string" >
		SELECT
			menu_id
		FROM t_role_menu a where role_id=#{0}
	</select>

	
</mapper>